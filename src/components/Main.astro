<div id="container">
	<main>
		<section id="hero">
			<h1>Masa</h1>
			<p>Your current time: <span id="local" class="datetime"></span></p>
			<p>In UTC: <span id="utc" class="datetime"></span></p>
			<h3>Pacific Time (PT):</h3>
			<p>Pacific Standard Time (PST, no daylight saving, early NOV - mid MAR) is UTC-8.</p>
			<p>Pacific Daylight Time (PDT, with daylight saving, mid MAR - early NOV) is UTC-7.</p>
		</section>
	</main>
	<script>
		const updateTime = () => {
			const now = new Date();
			const local = document.getElementById('local');
			if (local) {
				local.textContent = now.toString();
			}
			const utc = document.getElementById('utc');
			if (utc) {
				utc.textContent = now.toUTCString();
			}
		};
		setInterval(updateTime, 1000);
  </script>
</div>

<style>
	#container {
		font-family: Inter, Roboto, 'Helvetica Neue', 'Arial Nova', 'Nimbus Sans', Arial, sans-serif;
		height: 100%;
	}

	main {
		height: 100%;
		display: flex;
		justify-content: center;
	}

	#hero {
		display: flex;
		align-items: start;
		flex-direction: column;
		justify-content: center;
		padding: 16px;
	}

	.datetime {
		font-weight: bold;
	}

	@media screen and (max-width: 768px) {
		#container {
			display: flex;
			flex-direction: column;
		}

		#hero {
			display: block;
			padding-top: 10%;
		}
	}
</style>
